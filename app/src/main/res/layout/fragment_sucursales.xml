                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNameSuc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sede Valle" />

                    <TextView
                        android:id="@+id/tvDescriptionSuc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Av Chipichape con 10" />

                    <TextView
                        android:id="@+id/tvPriceSuc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cali-Colombia" />
                </LinearLayout>
            </LinearLayout>

            <!--    Codigo Caja 3-->
