            android:orientation="vertical">
            <!--    Codigo Caja 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSuc1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:src="@drawable/sedeprincipal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNameSuc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sede Principal" />

                    <TextView
                        android:id="@+id/tvDescriptionSuc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="K68 N°54-32 Sur" />

                    <TextView
                        android:id="@+id/tvPriceSuc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bogota-Colombia" />
                </LinearLayout>
            </LinearLayout>

            <!--    Codigo Caja 2-->
            <LinearLayout
                android:layout_width="match_parent"
